{$R *.lfm}

{ TForm3 }

procedure TForm3.Button3Click(Sender: TObject);
begin
     Close;
end;

procedure TForm3.Button1Click(Sender: TObject);
 var hasil,tunjangan,gp,asu,gb : Real;
begin
     if ComboBox1.ItemIndex = 0 then
        begin
          hasil:=8500000;
        end
     else if ComboBox1.ItemIndex = 1 then
        begin
          hasil:=5500000;
        end
     else if ComboBox1.ItemIndex = 2 then
        begin
          hasil:=5000000;
        end
     else if ComboBox1.ItemIndex = 3 then
        begin
          hasil:=4500000;
        end
     else if ComboBox1.ItemIndex = 4 then
        begin
          hasil:=3500000;
        end
     else if ComboBox1.ItemIndex = 5 then
        begin
          hasil:=2200000;
        end;
     Label12.Caption:=FloatToStr(hasil);
     Label11.Caption:=Edit1.Text;

     If ComboBox2.ItemIndex = 0 then
        begin
           tunjangan:= 500000;
        end
     else If ComboBox2.ItemIndex = 1 then
        begin
           tunjangan:= 0;
        end;
     gp:= hasil+tunjangan;
     asu:= gp*0.02;
     gb:= gp-asu;
     Label13.Caption:=FloatToStr(tunjangan);
     Label14.Caption:=FloatToStr(gp);
     Label15.Caption:=FloatToStr(asu);
     Label16.Caption:=FloatToStr(gb);


end;

procedure TForm3.Button2Click(Sender: TObject);
begin
  Edit1.Text:='';
  Label11.Caption:='';
  Label12.Caption:='0';
  Label13.Caption:='0';
  Label14.Caption:='0';
  Label15.Caption:='0';
  Label16.Caption:='0';
end;

end.
